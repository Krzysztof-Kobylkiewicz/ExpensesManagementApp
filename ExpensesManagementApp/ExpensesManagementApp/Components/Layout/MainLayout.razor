@inherits LayoutComponentBase
@using MudBlazor

<MudPopoverProvider @rendermode=InteractiveAuto/>
<MudDialogProvider @rendermode=InteractiveAuto />
<MudSnackbarProvider @rendermode=InteractiveAuto />
<MudThemeProvider @rendermode=InteractiveAuto Theme="ExpensesManagementAppCustomTheme"/>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code{

    private MudTheme ExpensesManagementAppCustomTheme = new()
    {
        PaletteDark = new PaletteDark
        {
            Primary = "#C2B9B8",
            AppbarBackground = "#C2B9B8",
        },
        PaletteLight = new PaletteLight
        {
            Primary = "#C2B9B8",
            AppbarBackground = "#C2B9B8",
        }
    };
}